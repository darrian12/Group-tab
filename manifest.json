{
    "manifest_version": 3,
    "name": "Group tab",
    "description": "Group your tabs together. Click icon to open menu.",
    "version": "0.1.0",
    "minimum_chrome_version": "92",
    "icons":
    {
        "16": "/images/icons/book-16.png",
        "48": "/images/icons/book-48.png",
        "128": "/images/icons/book-128.png"
    },
    "action": { "default_popup": "popup.html" },
    "permissions": [ "activeTab", "scripting", "tabs" ],
    "background": { "service_worker": "background.js", "type": "module" }
}